<!DOCTYPE html>
<html lang="en">
<head>
    <!--Bootstrap-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <%- include ('./partials/head.ejs') %>
</head>
<body>
    <h1><%= bakeries.type %></h1>
    <h3>(EDIT)</h3>
    <!--route to go home-->
    <nav>
        <a href="/" class="home">-Home-</a>
    </nav>
    <form action="/<%= bakeries.id %>?_method=PUT" method="post">
        <!--Container for edit form-->
        <div class="container" id="theItem">
            <!--details grouped together-->
            <fieldset class="theItem">
                <!--Type-->
                <div class="row">
                    <div class="col">
                        <label for="type">Type: </label>
                    </div>
                    <div class="col">
                        <input type="text" name="type" placeholder="<%= bakeries.type %>" />
                    </div>
                </div>
                <!--Type Image-->
                <div class="row">
                    <div class="col">
                        <label for="typeImg">Type Image Link: </label>
                    </div>
                    <div class="col">
                        <input type="text" name="typeImg" placeholder="<%= bakeries.typeImg %>">
                    </div>
                </div>
                <!--Category-->
                <div class="row">
                    <div class="col">
                        <label for="category">Category: </label>
                    </div>
                    <div class="col">
                        <input type="text" name="category" placeholder="<%= bakeries.category %>"/>
                    </div>
                </div>
                <!--Subcategory-->
                <div class="row">
                    <div class="col">
                        <label for="subcat">Subcategory: </label>
                    </div>
                    <div class="col">
                        <input type="text" name="subcat" placeholder="<%= bakeries.subcat %>"/>
                    </div>
                </div>
                <!--Description-->
                <div class="row">
                    <div class="col">
                        <label for="description">Description: </label>
                    </div>
                    <div class="col">
                        <input type="text" name="description" placeholder="<%= bakeries.description %>"/>
                    </div>
                </div>
                <!--Pricing Type-->
                <div class="row">
                    <div class="col">   
                        <label for="pricingType">Pricing Type: </label>
                    </div>
                    <div class="col">
                        <input type="text" name="pricingType" placeholder="<%= bakeries.pricingType %>" />
                    </div>
                </div>
                <!--Shop Price-->
                <div class="row">
                    <div class="col">
                        <label for="shopPrice">Shop Price ($): </label>
                    </div>
                    <div class="col">
                        <input type="text" name="shopPrice" placeholder="<%= bakeries.shopPrice %>" />
                    </div>
                </div>
                <!--Market Price-->
                <div class="row">
                    <div class="col">
                        <label for="marketPrice">Market Price ($): </label>
                    </div>
                    <div class="col">
                        <input type="text" name="marketPrice" placeholder="<%= bakeries.marketPrice %>" />
                    </div>
                </div>
                <!--Shipment Price-->
                <div class="row">
                    <div class="col">
                        <label for="shipmentPrice">Shipment Price ($): </label>
                    </div>
                    <div class="col">
                        <input type="text" name="shipmentPrice" placeholder="<%= bakeries.shipmentPrice %>"/>
                    </div>
                </div>    
            </fieldset>
            <!--Edit button that updates item info-->
            <input type="submit" class="green btn" value="Edit" />
        </div>
    </form>
</body>
</html>