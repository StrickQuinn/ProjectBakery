<!DOCTYPE html>
<html lang="en">
<head>
    <!--Bootstrap-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <%- include ('./partials/head.ejs') %>
</head>
<body>
    <header>
        <h1>Add New Bakery Item</h1>
        <!--route to go home-->
        <nav>
            <a href="/" class="home">-Home-</a>
    </nav>
    </header>
    <form action="/" method="post">
        <!--Container for new form-->
        <div class="container" id="theItem">
            <!--details grouped together-->
            <fieldset class="theItem">
                <!--Type-->
                <div class="row">
                    <div class="col">
                        <label for="type">Type: </label>
                    </div>
                    <div class="col">
                        <input type="text" name="type" />
                    </div>
                </div>
                <!--Type Image-->
                <div class="row">
                    <div class="col">
                        <label for="typeImg">Type Image Link: </label>
                    </div>
                    <div class="col">
                        <input type="text" name="typeImg" />
                    </div>
                </div>
                <!--Category-->
                <div class="row">
                    <div class="col">
                        <label for="category">Category: </label>
                    </div>
                    <div class="col">
                        <input type="text" name="category" />
                    </div>
                </div>
                <!--Subcategory-->
                <div class="row">
                    <div class="col">
                        <label for="subcat">Subcategory: </label>
                    </div>
                    <div class="col">
                        <input type="text" name="subcat" />
                    </div>
                </div>
                <!--Description-->
                <div class="row">
                    <div class="col">
                        <label for="description">Description: </label>
                    </div>
                    <div class="col">
                        <input type="text" name="description" />
                    </div>
                </div>
                <!--Pricing Type-->
                <div class="row">
                    <div class="col">   
                        <label for="pricingType">Pricing Type: </label>
                    </div>
                    <div class="col">
                        <input type="text" name="pricingType" />
                    </div>
                </div>
                <!--Shop Price-->
                <div class="row">
                    <div class="col">
                        <label for="shopPrice">Shop Price ($): </label>
                    </div>
                    <div class="col">
                        <input type="text" name="shopPrice" />
                    </div>
                </div>
                <!--Market Price-->
                <div class="row">
                    <div class="col">
                        <label for="marketPrice">Market Price ($): </label>
                    </div>
                    <div class="col">
                        <input type="text" name="marketPrice" />
                    </div>
                </div>
                <!--Shipment Price-->
                <div class="row">
                    <div class="col">
                        <label for="shipmentPrice">Shipment Price ($): </label>
                    </div>
                    <div class="col">
                        <input type="text" name="shipmentPrice" />
                    </div>
                </div>    
            </fieldset>
            <!--add item to db-->
            <input type="submit" value="Add" class="orange btn" />
        </div>
    </form>
</body>
</html>